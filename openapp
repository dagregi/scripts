#!/usr/bin/env bash

case "$1" in
--gimp) gimp ;;
--browser) $BROWSER ;;
--terminal) $TERMINAL ;;
--htop) $TERMINAL -e htop ;;
--editor) $TERMINAL -e nvim ;;
--filemanager) $TERMINAL -e lf ;;
--visualizer) $TERMINAL -e cava -c Cava -n Cava ;;
--music) $TERMINAL -e ncmpcpp -c Ncmpcpp -n Ncmpcpp ;;
--runner) rofi-runner ;;
--launcher) rofi-launcher ;;
--powermenu) rofi-powermenu ;;
--bookmarks) rofi-bookmarks ;;
--playermenu) rofi-playermenu ;;
*) echo "Don't know what to do?" ;;
esac
